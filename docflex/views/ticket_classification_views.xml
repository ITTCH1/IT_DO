<?xml version="1.0" encoding="utf-8" ?>
<odoo>

<record id="docflex_ticket_classification_view_tree" model="ir.ui.view">
        <field name="name">ticket.classification.tree</field>
        <field name="model">ticket.classification</field>
        <field name="arch" type="xml">
            <tree editable="top" string="تصنيف المذكرة " sample="1" multi_edit="1">
                <field name="name"/>
                <!-- <field name="code"/> -->
                <field name="is_default"/>
                <field name="color" widget="color_picker" optional="show"/>
                <field name="icon"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="docflex_ticket_classification_view_form" model="ir.ui.view">
        <field name="name">ticket.classification.form</field>
        <field name="model">ticket.classification</field>
        <field name="arch" type="xml">
            <form string="تصنيف المذكرات">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <!-- <field name="code"/> -->
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="icon"/>
                        </group>
                        <group>
                            <field name="is_default"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_docflex_ticket_classification" model="ir.actions.act_window">
        <field name="name">تصنيف المذكرات</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ticket.classification</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                انشاء تصنيف مذكرة
            </p>
        </field>
        <field name="domain">[("id", "!=", False)]</field> 
    </record>
    <menuitem id="docflex_ticket_classification_menu" name="تصنيف المذكرات" parent="docflex_config_menue" action="docflex.action_docflex_ticket_classification" groups="docflex.docflex_super_manager_group" sequence="1"/>


</odoo>
