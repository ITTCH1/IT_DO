<?xml version="1.0" encoding="utf-8" ?>
<odoo>



  <record id="docflex_ticket_status_view_tree" model="ir.ui.view">
        <field name="name">ticket.status.tree</field>
        <field name="model">ticket.status</field>
        <field name="arch" type="xml">
            <tree editable="top" string="الحالة" sample="1" multi_edit="1">
                <field name="name"/>
                <field name="code"/>
                <field name="is_default"/>
                <field name="color" widget="color_picker" optional="show"/>
                <field name="icon"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="docflex_ticket_status_view_form" model="ir.ui.view">
        <field name="name">ticket.status.form</field>
        <field name="model">ticket.status</field>
        <field name="arch" type="xml">
            <form string="الحالات">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="icon"/>
                        </group>
                        <group>
                            <field name="is_default"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_docflex_ticket_status" model="ir.actions.act_window">
        <field name="name">حالات المذكرات</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ticket.status</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                انشاء حالة مذكرة
            </p>
        </field>
        <field name="domain">[("id", "!=", False)]</field> 
    </record>
    <menuitem id="docflex_ticket_status_menu" name="حالات المذكرات" parent="docflex_config_menue" action="docflex.action_docflex_ticket_status" groups="docflex.docflex_super_manager_group" sequence="1"/>


</odoo>
