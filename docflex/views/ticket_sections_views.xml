<?xml version="1.0" encoding="utf-8" ?>
<odoo>
<record id="docflex_ticket_section_view_tree" model="ir.ui.view">
        <field name="name">ticket.section.tree</field>
        <field name="model">ticket.section</field>
        <field name="arch" type="xml">
            <tree editable="top" string="أقسام المذكرة " sample="1" multi_edit="1">
                <field name="name"/>
                <field name="code"/>
                <field name="connected_with"/>
                <field name="serail_number"/>
                <field name="color" widget="color_picker" optional="show"/>
                <field name="icon"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="docflex_ticket_section_view_form" model="ir.ui.view">
        <field name="name">ticket.section.form</field>
        <field name="model">ticket.section</field>
        <field name="arch" type="xml">
            <form string="أقسام المذكرات">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                           <field name="connected_with"/>
                            <field name="serail_number"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="icon"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_docflex_ticket_sections" model="ir.actions.act_window">
        <field name="name">اقسام المذكرات</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ticket.section</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                انشاء قسم مذكرة
            </p>
        </field>
        <field name="domain">[("id", "!=", False)]</field>  

    </record>
    <menuitem id="docflex_ticket_sections_menu" name="اقسام المذكرات" parent="docflex_config_menue" action="docflex.action_docflex_ticket_sections" groups="docflex.docflex_super_manager_group" sequence="1"/>


</odoo>
